@model TESProject.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

    <head>
        <meta charset="UTF-8">
        <title>Side Navigation Bar</title>
        <link rel="stylesheet" href="~/css/RegisterPageStyle.css">
    </head>


    <form method="post" asp-controller="Account" asp-action="Register">
        <div asp-validation-summary="ModelOnly"></div>
        <img class="img1" src="~/images/ProfilePicture.png" />
        <h2>Registration</h2>
        <div>
            <input asp-for="Email" placeholder="Email"/>
            <span asp-validation-for="Email"></span>
        </div>

        <div>
            <input asp-for="Password" placeholder="Password"/>
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <input asp-for="PasswordConfirm" placeholder="Confirm password" />
            <span asp-validation-for="PasswordConfirm"></span>
        </div>
        <div>
            <input class="submitButton" type="submit" value="Submit" />
        </div>
    </form>
